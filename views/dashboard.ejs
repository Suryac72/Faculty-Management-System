<!DOCTYPE html>
<html>

<head>
    <title>Admin Dashboard</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-witdh, initial-scale=1.0" />
    <link rel="stylesheet" href="/dashboard.css" />
    <link rel="stylesheet" href="/font-awesome.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@600;700&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"
        integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>   

</head>
<style>

</style>

<body>
    <section id="sidebar">
        <div class="sidebar-brand">
            <h3><a href="/"><i class="fa fa-desktop"></i> <span>Faculty Manager</span></a></h3>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li><a href="#"><i class="fa fa-desktop"></i> <span>Dashboard</span></a></li>
                <% if (person.role==='ADMIN' ) { %>
                    <li><a href="/admin/account"><i class="fa fa-user"></i> <span>Faculties</span></a></li>
                    <% }else { %>
                        <li><a href="/admin/account"><i class="fa fa-user"></i> <span>Students</span></a></li>
                        <% } %>
                            <li><a href="#"><i class="fa fa-file"></i> <span>Assignments</span></a></li>
                            <li><a href="/user/account"><i class="fa fa-user"></i> <span>Account</span></a></li>
                            <li><a href="/auth/logout"><i class="fa fa-sign-out"></i> <span>Logout</span></a></li>
            </ul>
        </div>
    </section>

    <Section id="main-content">
        <header>
            <div class="header-left">
                <h2 class="toggle-btn">
                    <i class="fa fa-bars"></i> Dashboard
                </h2>
            </div>
            <div class="header-left header-serach">
                <div class="serach-par">
                    <input class="search" type="text" placeholder="Search Here...">
                    <i class="fa fa-search"></i>
                </div>
            </div>
            <div class="header-left header-profile">
                <img src="/images/user.png" class="img-responsive" />
                <h3>
                    <%=profile.name%>
                </h3>
                <p>
                    <%=profile.role%>
                </p>
            </div>
            <div class="clear"></div>
        </header>
        <div class="clear"></div>
        <div class="main-content-info container">
            <div class="card">
                <h2 class="cus-num cus-h">
                    <% if (profile.role==='ADMIN' ) { %>
                        <%=person.filter((p)=> p.role === 'FACULTY').length%>
                            <% } else {%>
                                <%=person.filter((p)=> p.role === 'STUDENT').length%>
                                    <% } %>
                </h2>
                <% if (profile.role==='FACULTY' ) { %>
                    <p>Students</p>
                    <% } else {%>
                        <p>Faculties</p>
                        <% } %>
            </div>
            <% if (profile.role==='FACULTY' ) { %>
                <div class="card">
                    <h2 class="cus-num cus-pro">250</h2>
                    <p>Assignments</p>
                </div>
                <% } %>
                    <div class="clear"></div>
        </div>
        <div class="content-pro-par container">
            <div class="pro-table">
                <div class="recent-project">
                    <div class="rec-pro-h">
                        <h2>
                            <%=profile.role=="FACULTY" ?"Students" : "Faculties" %>
                        </h2>
                    </div>
                    <div class="see-all">
                        <button>Add</button>
                    </div>
                    <div class="clear"></div>
                </div>
                <table style="width:100%">
                    <% if (profile.role=='FACULTY' ) { %>
                        <tr>
                            <th>Roll No</th>
                            <th>Name</th>
                            <th>Branch</th>
                            <th>Section</th>
                        </tr>
                        <% for(var i=0; i < person.length; i++) { %>
                            <tr>
                                <td>
                                    <%= person[i].rollNumber %>
                                </td>
                                <td>
                                    <%= person[i].name %>
                                </td>
                                <td>
                                    <%= person[i].branch %>
                                </td>
                                <td>
                                    <%= person[i].section %>
                                </td>
                            </tr>
                            <% } %>
                                <% } else { %>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Contact Number</th>
                                        <th>Role</th>
                                    </tr>
                                    <% for(var i=0; i < person.length; i++) { %>
                                        <tr>
                                            <% if (person[i].role==='FACULTY' ) { %>
                                                <td>
                                                    <%= person[i].id%>
                                                </td>
                                                <td>
                                                    <%= person[i].name %>
                                                </td>
                                                <td>
                                                    <%= person[i].email %>
                                                </td>
                                                <td>
                                                    <%= person[i].contactNumber %>
                                                </td>
                                                <td>
                                                    <%= person[i].role %>
                                                </td>
                                                <% } %>
                                        </tr>
                                        <% } %>
                                            <%} %>

                </table>
            </div>
            <% if (profile.role === 'FACULTY') { %>
                <div class="pro-cus">
                    <div class="recent-project">
                        <div class="rec-pro-h">
                            <h2>All Assignments</h2>
                        </div>
                        <div class="see-all">
                            <button>Add</button>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <table style="width:100%">
    
                    </table>
                </div>
            <% } %>
            <div class="clear"></div>
        </div>
    </Section>
    <div class="clear"></div>
</body>

</html>
<script src="/js/external.js"></script>